@model IEnumerable<eventGestion.Models.EventItems.Event>

@{
    ViewData["Title"] = "Liste des Événements";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Lieu</th>
            <th>Date</th>
            <th>Actions</th>
            <th>Inscription</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Date</td>
                <td>
                    <a href="@Url.Action("Details", "Event", new { id = item.Id })">Détails</a>
                </td>
                <td>
                    <a href="@Url.Action("Register", "Event", new { id = item.Id })" class="btn btn-success">S'inscrire</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Event")" class="btn btn-primary">Créer un événement</a>
